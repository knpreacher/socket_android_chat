<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.knp.socketchat.MainActivity"
    android:background="@color/grey_2">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:theme="@style/TextLabel"
        android:layout_alignParentStart="true">

        <EditText
            style="@style/App_EditTextStyle"
            android:id="@+id/input_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Login:" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/room_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_input_layout"
        android:theme="@style/TextLabel"
        android:layout_alignParentEnd="true">

        <EditText
            style="@style/App_EditTextStyle"
            android:id="@+id/input_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room:" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room_input_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/btnLogin"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Settings and Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvSAH"
        android:textColor="@color/textGray" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:layout_above="@+id/login_input_layout" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSAH"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:id="@+id/textView" />

    <CheckBox
        android:text="Remember me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbRM"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/room_input_layout"
        android:layout_alignStart="@+id/btnLogin" />

</RelativeLayout>
